<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <%- renderStyles() %>
    <%- renderScripts() %>

    <% if (NODE_ENV.includes('dev')) { %>
        <script>
            // Get the current hostname and port from the browser
            const host = window.location.hostname;
            const currentPort = window.location.port;

            // Calculate WebSocket port (current port + 1)
            const wsPort = currentPort ? (parseInt(currentPort) + 1) : 3001;

            // Create WebSocket connection using dynamic hostname and port
            const ws = new WebSocket(`ws://${host}:${wsPort}`);
            ws.onclose = () => {
                setTimeout(() => location.reload(), 2000);
            };
        </script>
    <% } %>

</head>
<body class="<%= bodyClass %>">
    <header>
        <nav>
            <ul>
                <li><a href="/" <% if (title.toLowerCase() == 'home') {%> class="active" <% }%>>Home</a></li>
                <li><a href="/about" <% if (title.toLowerCase() == 'about') {%> class="active" <% }%>>About</a></li>
                <li><a href="/catalog" <% if (title.toLowerCase() == 'course catalog') {%> class="active" <% }%>>Catalog</a></li>
                <li><a href="/demo" <% if (title.toLowerCase() == 'middleware demo page') {%> class="active" <% }%>>Demo</a></li>
                <li><a href="/faculty" <% if (title.toLowerCase() == 'faculty directory') {%> class="active" <% }%>>Faculty</a></li>
                <li><a href="/contact" <% if (title.toLowerCase() == 'contact us') {%> class="active" <% }%>>Contact</a></li>
                <li><a href="/contact/responses" <% if (title.toLowerCase() == 'contact form submissions') {%> class="active" <% }%>>Contact Responses</a></li>
                <li><a href="/register" <% if (title.toLowerCase() == 'user registration') {%> class="active" <% }%>>Register</a></li>
                <li><a href="/register/list" <% if (title.toLowerCase() == 'registered users') {%> class="active" <% }%>>Users</a></li>

                 <!-- Only visible when logged in -->
                <% if (isLoggedIn) { %>
                    <li><a href="/dashboard">Dashboard</a></li>
                    <li><a href="/register/list">All Users</a></li>
                    <li><a href="/contact/responses">Contact Responses</a></li>
                    <li><a href="/logout">Logout</a></li>
                <% } %>
                <!-- Only visible when NOT logged in -->
                <% if (!isLoggedIn) { %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Register</a></li>
                <% } %>
            </ul>
        </nav>
    </header>

<% 
    const messages = flash();
    const hasMessages = Object.values(messages).some(arr => arr.length > 0);
%>

<% if (hasMessages) { %>
    <div class="flash-messages">
        <% Object.keys(messages).forEach(type => { %>
            <% messages[type].forEach(message => { %>
                <div class="flash <%= type %>">
                    <%= message %>
                </div>
            <% }); %>
        <% }); %>
    </div>
<% } %>

